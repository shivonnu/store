<section class="hero is-warning is-small mb-5">
  <div class="hero-body">
    <div class="container">
      <h2 class="title is-4">🚀 地球救済ミッション発動中！</h2>
      <p class="subtitle is-6">
        リストから<strong>[★]がついた3つの神器</strong>をカートに入れて決済すると世界が救われます。
      </p>
    </div>
  </div>
</section>

<div class="columns is-multiline">
  <% @products.each do |product| %>
    <div class="column is-4">
      <div class="card">
        <div class="card-image">
        <figure class="image is-4by3">
          <%# 修正：image_urlがあり、かつ、ファイルが実際にフォルダ内に存在するかチェックする %>
          <% if product.image_url.present? && File.exist?(Rails.root.join('app/assets/images', product.image_url)) %>
            <%= image_tag product.image_url, alt: product.name %>
          <% else %>
            <%# ファイルがない場合はこっちを表示 %>
            <img src="https://via.placeholder.com/600x450?text=<%= u product.name %>" alt="Placeholder">
          <% end %>
        </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= product.name %></p>
              <p class="subtitle is-6">¥<%= product.price %></p>
            </div>
          </div>
          <div class="content">
            <%= product.description %>
          </div>
          
          <%# カートに入れるボタン %>
          <%= button_to "カートに入れるニャ！", add_item_cart_path(product_id: product.id), method: :post, class: "button is-warning is-fullwidth" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="has-text-centered mt-5">
  <%= link_to '現在のカートを見る', cart_path, class: "button is-info is-large" %>
</div>