<%# app/views/products/index.html.erb %>

<div class="container"> <%# 画面中央寄せのコンテナ %>
  <h1 class="title is-2">Products</h1> <%# 大きなタイトルと Bulma のクラスを適用 %>

  <p class="mb-4"> <%# mb-4 は margin-bottom: 1.5rem の意 %>
    <%= link_to "New product", new_product_path, class: "button is-primary" %> <%# プライマリーボタンクラスを適用 %>
  </p>

  <table class="table is-fullwidth is-striped"> <%# 幅100%、ストライプ柄のテーブルクラスを適用 %>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th> <%# 編集・詳細・削除リンク用の空白セル %>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= link_to "Show", product %></td>
          <td><%= link_to "Edit", edit_product_path(product) %></td>
          <td><%= link_to "Destroy", product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>